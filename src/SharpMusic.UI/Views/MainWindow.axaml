<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SharpMusic.UI.ViewModels"
        xmlns:local="using:SharpMusic.UI.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SharpMusic.UI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="SharpMusic.UI"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaTitleBarHeightHint="599"
        Width="940" Height="595">

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<Panel>
		<ExperimentalAcrylicBorder IsHitTestVisible="False">
			<ExperimentalAcrylicBorder.Material>
				<ExperimentalAcrylicMaterial
                    TintColor="Black"
                    TintOpacity="1"
                    BackgroundSource="Digger"
                    MaterialOpacity="0.65"/>
			</ExperimentalAcrylicBorder.Material>
		</ExperimentalAcrylicBorder>

		<DockPanel Margin="20 30 20 15">
			<StackPanel Margin="5 40 10 40"
                        Width="30" Height="450"
                        DockPanel.Dock="Right">
				<ItemsControl Items="{Binding Items}" Margin="0 0 0 5">
					<ItemsControl.DataTemplates>
						<DataTemplate>
							<Button Command="{Binding SwitchToThisViewModel}"
							        Width="30" Height="30" Background="Transparent">
								<Svg Path="{Binding SvgIconPath}"
								     Width="25" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center"/>
							</Button>
						</DataTemplate>
					</ItemsControl.DataTemplates>
				</ItemsControl>
				<ItemsControl Items="{Binding Controls}"/>
			</StackPanel>
			<Border Margin="10 20">
				<ContentControl Content="{Binding SecondaryViewModel}"/>
			</Border>
		</DockPanel>
	</Panel>
</Window>
